<div class="main">

<div class="top-container">
<h1><%= @task.title%>:</h1>
<a href="/tasks/<%=@task.id%>/edit" class="label">Edit ✎</a>
</div>

<p class="label"><%=@task.details %></p>
<% if @task.completed == false %>
  <p class="label">This task is not completed yet</p>
<% else %>
  <p class="label" id="complete">This task is completed 🎉</p>
<% end %>

<%= link_to "Back to list", tasks_path, class:"label" %>
</div>

<style>
.main{
  margin:50px 100px;
}

.top-container{
  width:60vw;
  /* padding:20px; */
  display:flex;
  justify-content:space-between;
}

</style>
